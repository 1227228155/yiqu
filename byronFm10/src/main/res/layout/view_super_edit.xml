<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/set_item_selector"
    android:orientation="vertical"
    >
    <LinearLayout 
    android:id="@+id/top_line"
    android:layout_width="match_parent"
    android:layout_height="1px"
    >
    <ImageView 
    android:layout_width="match_parent"
    android:layout_height="1px" 
    android:src="@color/set_line_color"
    />
    </LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:minHeight="@dimen/view_super_edit_min_height" 
    android:paddingLeft="@dimen/view_super_padding_left"
    >
	<TextView
	android:id="@+id/label" 
    android:layout_width="@dimen/view_super_edit_left_width"
    android:layout_height="match_parent" 
    android:gravity="center_vertical"
    style="@style/view_super_txt_label"
    />
	<FrameLayout 
	android:id="@+id/edit_lay" 
	android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent"
	android:padding="3dp"
    />
	<TextView
	android:id="@+id/view_more_padding" 
    android:layout_width="@dimen/view_super_padding_right"
    android:layout_height="wrap_content" 
    android:visibility="gone"
    />
	<LinearLayout 
	android:id="@+id/moreLay"
    android:layout_width="@dimen/view_super_edit_right_width"
    android:layout_height="match_parent" 
    android:visibility="gone"
    android:gravity="right|center_vertical"
    android:paddingRight="@dimen/view_super_padding_right"
    >
	    <ImageView 
	    android:id="@+id/more"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:scaleType="fitCenter"
	    />
    </LinearLayout>
</LinearLayout>
 <LinearLayout 
    android:id="@+id/bottom_line"
    android:layout_width="match_parent"
    android:layout_height="1px"
    >
    <ImageView 
    android:layout_width="match_parent"
    android:layout_height="1px" 
    android:src="@color/set_line_color"
    />
    </LinearLayout>
</LinearLayout>