<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/set_item_selector"
    android:orientation="vertical"
    >
        <LinearLayout 
    android:id="@+id/top_line"
    android:layout_width="match_parent"
    android:layout_height="1px"
    >
    <ImageView 
    android:layout_width="match_parent"
    android:layout_height="1px" 
    android:src="@color/set_line_color"
    />
    </LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:paddingLeft="@dimen/view_super_padding_left"
    android:paddingRight="@dimen/view_super_padding_right"
    android:gravity="center_vertical"
    >
    <LinearLayout 
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content" 
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    >
	    <TextView
		android:id="@+id/label" 
		style="@style/view_super_txt_label"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    />
	    <TextView
		android:id="@+id/sub_label" 
		style="@style/view_super_txt_sub_label"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:layout_marginTop="3dp"
	    android:visibility="gone"
	    />
    </LinearLayout>
    <CheckBox 
    android:id="@+id/checkBox"
    android:layout_width="32dp"
    android:layout_height="@dimen/view_super_edit_min_height" 
    android:layout_marginLeft="10dp"
    android:button="@drawable/btn_radio_holo_light"
    android:background="@null"
    />
</LinearLayout>
 <LinearLayout 
    android:id="@+id/bottom_line"
    android:layout_width="match_parent"
    android:layout_height="1px"
    >
    <ImageView 
    android:layout_width="match_parent"
    android:layout_height="1px" 
    android:src="@color/set_line_color"
    />
    </LinearLayout>
</LinearLayout>