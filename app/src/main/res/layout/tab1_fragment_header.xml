<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray" />



    <com.yiqu.iyijiayi.view.AutoPlayViewPager
        android:id="@+id/vp_spinner"
        android:layout_width="match_parent"
        android:layout_height="144dp">

    </com.yiqu.iyijiayi.view.AutoPlayViewPager>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <TextView
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:id="@+id/raokouling"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:drawableTop="@mipmap/icon_rkl"
            android:gravity="center"
            android:text="挑战绕口令" />

        <View
            android:background="@color/tab_bg_color"
            android:layout_width="1dp"
            android:layout_height="match_parent"
             />


        <TextView
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:id="@+id/reader"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:drawableTop="@mipmap/icon_read"
            android:gravity="center"
            android:text="为你朗诵" />
        <View
            android:background="@color/tab_bg_color"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            />

        <TextView
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:id="@+id/question"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:drawableTop="@mipmap/icon_quetion"
            android:gravity="center"
            android:text="热门问答" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/tab_bg_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="最新作品"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/more_xizuo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:drawableRight="@mipmap/top_arrow"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="HOT"
            android:textColor="@color/dd_gray"
            android:textSize="13sp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tab_bg_color" />




</LinearLayout>
