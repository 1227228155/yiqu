<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="220dp"
              android:descendantFocusability="blocksDescendants"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.ui.views.CircleImageView
            android:id="@+id/header"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="24dp"
            android:src="@mipmap/menu_head"
            app:border_color="@color/circle_imageview_border"
            app:border_width="3dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="220dp"
                android:singleLine="true"
                android:text=""
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="15dp"
                android:paddingBottom="15dp"
                android:src="@mipmap/icon_new"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/author"
                android:maxWidth="220dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/dark_gray"
                android:textSize="14sp"/>

        </RelativeLayout>


    </LinearLayout>

    <com.yiqu.iyijiayi.view.MultiView.ExpandTextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:showLines="4"/>

    <!-- 不同的地方 -->

    <com.yiqu.iyijiayi.view.MultiView.MultiImageView
        android:id="@+id/multiImagView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">
    </com.yiqu.iyijiayi.view.MultiView.MultiImageView>

    <View
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_top_title"/>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listener"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:drawableLeft="@mipmap/seed"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/dd_gray"
            android:textSize="14sp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/comment_normal"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/dd_gray"
            android:textSize="14sp"/>


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:drawableLeft="@mipmap/dianzan__new"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/dd_gray"
            android:textSize="14sp"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/tab_bg_color"/>

</LinearLayout>