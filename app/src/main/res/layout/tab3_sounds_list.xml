<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:background="@mipmap/music_bg"
             />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/musicname"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:text="jin"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/accompaniment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:text="今夜无人夜无人夜无人"
                android:textColor="@color/dd_gray"
                android:textSize="13sp" />

        </LinearLayout>

        <Button
            android:id="@+id/add_question"
            android:layout_width="30dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/question_btn_selector"
             />

        <Button
            android:id="@+id/upload"
            android:layout_width="30dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/upload_btn_selector" />
    </LinearLayout>

</LinearLayout>