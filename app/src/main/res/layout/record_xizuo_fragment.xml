<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/background_color_rating_grey"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/musicname"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="伴奏"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/musictime"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:textColor="@color/dd_gray"
            android:text="20:20"
            android:gravity="right"
            android:textSize="15dp"
            />


    </LinearLayout>

    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="大小："
            android:textColor="@color/dd_gray"
            android:textSize="13dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="20"
            android:textColor="@color/dd_gray"
            android:textSize="13dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="MB"
            android:textColor="@color/dd_gray"
            android:textSize="13dp"
            />

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="码率："
            android:textColor="@color/dd_gray"
            android:textSize="13dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="256"
            android:textColor="@color/dd_gray"
            android:textSize="13dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="比特"
            android:textColor="@color/dd_gray"
            android:textSize="13dp"
            />


    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@mipmap/record_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="伴奏下载中..."
            android:textSize="15dp"
            android:textColor="@color/dd_gray"
            />
        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="15dp"
            android:textColor="@color/dd_gray"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:background="@color/record_bg">

            <TextView
                android:paddingLeft="15dp"
                android:drawableLeft="@mipmap/recording"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="正在录制"
                android:textSize="15dp"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="点击屏幕中间可暂停录制"
                android:textSize="13dp"
                android:textColor="@color/dark_gray"
                />

        </RelativeLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/people_voice"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/redMain"
            android:text="开始录制"
            android:textSize="18sp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/music_voice"
            android:scaleType="centerInside"/>

    </LinearLayout>


</LinearLayout>