<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/musicname"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="今夜无人入睡"
                android:textSize="18sp" />

            <ImageView
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/shengyue"/>
        </LinearLayout>


        <TextView
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawableRight="@mipmap/arrow_detail"
            android:gravity="center"
            android:text="查看详情"
            android:textColor="@color/dd_gray"
            android:textSize="13sp" />

    </RelativeLayout>

    <TextView
        android:layout_marginTop="1dp"
        android:id="@+id/desc"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:singleLine="true"
        android:textColor="@color/dd_gray"
        android:text="今夜无人夜无人夜无人夜无人夜无人夜无人夜无人夜无人入睡"
        android:textSize="13sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/soundtime"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="260"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="@color/stu_voice"/>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
           android:layout_gravity="center"
            android:background="@drawable/stu_voice"
            >
            <ProgressBar
                android:id="@+id/pb_stu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/stu_voice"
                android:progressDrawable="@drawable/progressbar_stu"
                style="?android:attr/progressBarStyleHorizontal"
                 />

            <TextView
                android:id="@+id/stu_listen"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:background="@color/transparent"
                android:layout_height="match_parent"
                android:text="我也要听"
                android:textSize="22sp"
                android:textColor="@color/white"/>
        </RelativeLayout>


        <com.ui.views.CircleImageView
            android:id="@+id/stu_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/menu_head" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/tea_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="18sp"
            android:text="jintielin"/>

        <TextView
            android:id="@+id/tectitle"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/tea_name"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="laoshi"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:textSize="13sp"
            android:drawableRight="@mipmap/arrow"
            android:layout_centerVertical="true"
            android:text="已点评"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/dd_gray"

            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <com.ui.views.CircleImageView
            android:id="@+id/tea_header"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/menu_head" />

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:background="@mipmap/tea_voice"
            >
            <ProgressBar
                android:id="@+id/pb_tea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/tea_voice"
                android:progressDrawable="@drawable/progressbar_stu"
                style="?android:attr/progressBarStyleHorizontal"
                />

            <TextView
                android:id="@+id/tea_listen"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:background="@color/transparent"
                android:layout_height="match_parent"
                android:text="一元偷偷听"
                android:textSize="20sp"
                android:textColor="@color/white"/>


        </RelativeLayout>

        <TextView
            android:id="@+id/listener"
           android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@color/transparent"
            android:layout_height="match_parent"
            android:text="228"
            android:textSize="10sp"
            android:textColor="@color/redMain"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:background="@color/transparent"
            android:layout_height="match_parent"
            android:text=" 听过"
            android:textSize="10sp"
            android:textColor="@color/dd_gray"/>


    </LinearLayout>


</LinearLayout>