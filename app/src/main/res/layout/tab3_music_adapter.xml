<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              xmlns:android_app="http://schemas.android.com/apk/res-auto"
              android:gravity="center_vertical"
              android:minHeight="60dp"
              android:orientation="horizontal"
    >


    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp">

        <com.ui.views.RoundProgressBar
            android:id="@+id/round_pb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android_app:startAngle="0"
            android_app:roundColor="@color/transparent"
            android_app:roundWidth="5dip"
            android_app:roundProgressColor="@color/redMain"
            android_app:textIsDisplayable="false"
            android_app:max="100"
            />

        <ImageView
            android:id="@+id/music_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@mipmap/music_play"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/musicname"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="bottom"
            android:singleLine="true"
            android:textSize="16sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/chapter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:singleLine="true"
                android:textColor="@color/dd_gray"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/accompaniment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:singleLine="true"
                android:textColor="@color/dd_gray"
                android:textSize="14sp"
                />
        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="50dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/dd_gray"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_height="match_parent"/>

</LinearLayout>