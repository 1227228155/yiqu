<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.yiqu.iyijiayi.view.ScrollViewWithListView
                    android:id="@+id/lv_teacher"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/background_color_rating_grey"
                    android:dividerHeight="1dp"
                    android:minHeight="255dp"
                    android:listSelector="#00000000"
                    android:scrollbars="none"></com.yiqu.iyijiayi.view.ScrollViewWithListView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_color_rating_grey"
                    />
                <TextView
                    android:visibility="invisible"
                    android:id="@+id/loadmore_teacher"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:drawableRight="@mipmap/arrow_red"
                    android:gravity="center_vertical"
                    android:paddingLeft="13dp"
                    android:text="加载更多导师"
                    android:textColor="@color/redMain" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_color_rating_grey"
                    />

                <com.yiqu.iyijiayi.view.ScrollViewWithListView
                    android:id="@+id/lv_student"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:listSelector="#00000000"
                    android:divider="@color/background_color_rating_grey"
                    android:dividerHeight="1dp"
                    android:minHeight="255dp"
                    android:scrollbars="none"></com.yiqu.iyijiayi.view.ScrollViewWithListView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_color_rating_grey"
                    />
                <TextView
                    android:visibility="invisible"
                    android:id="@+id/loadmore_student"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:drawableRight="@mipmap/arrow_red"
                    android:gravity="center_vertical"
                    android:paddingLeft="13dp"
                    android:layout_marginRight="10dp"
                    android:text="加载更多学生"
                    android:textColor="@color/redMain" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_color_rating_grey"
                    />

            </LinearLayout>
        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>


