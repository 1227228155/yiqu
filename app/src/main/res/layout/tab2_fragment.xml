<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tab_teacher"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/teacher_selected_selector"
                android:gravity="center"
                android:text="导师"
                android:textColor="@color/white"
                android:textSize="15dp"/>


            <TextView
                android:id="@+id/tab_student"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-1dp"
                android:background="@drawable/student_selected_selector"
                android:gravity="center"
                android:text="学生"
                android:textColor="@color/tab_text_color"
                android:textSize="15dp"/>


        </LinearLayout>

        <GridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:columnWidth="90dp"
            android:gravity="center"
            android:scrollbars="none"
            android:horizontalSpacing="5dp"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/tab_line_color"/>

        <TextView
            android:id="@+id/shengyue"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:drawablePadding="11dp"
            android:text="导师"
            android:drawableRight="@mipmap/arrow"
            android:layout_marginRight="15dp"
            android:drawableLeft="@mipmap/icon_shengyue"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/tab_bg_color"/>

        <TextView
            android:id="@+id/boyin"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:drawablePadding="11dp"
            android:text="导师"
            android:drawableRight="@mipmap/arrow"
            android:layout_marginRight="15dp"
            android:drawableLeft="@mipmap/icon_boyin"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/tab_bg_color"/>

        <TextView
            android:id="@+id/yueqi"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:drawablePadding="11dp"
            android:text="导师"
            android:drawableRight="@mipmap/arrow"
            android:layout_marginRight="15dp"
            android:drawableLeft="@mipmap/icon_yueqi"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"/>


    </LinearLayout>



</ScrollView>