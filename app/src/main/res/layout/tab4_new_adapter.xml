<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants"
              android:minHeight="110dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_bg"
        android:orientation="vertical"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.ui.views.CircleImageView
                android:id="@+id/header"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:padding="24dp"
                android:src="@mipmap/menu_head"
                app:border_color="@color/circle_imageview_border"
                app:border_width="3dp"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/musicname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:maxWidth="180dp"
                    android:singleLine="true"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:textColor="@color/dd_gray"
                        android:textSize="14sp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/publish_time"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:textColor="@color/dd_gray"
                        android:textSize="14sp"
                        />


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/time"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/transparent"
                android:gravity="center"
                android:textColor="@color/dd_gray"
                android:textSize="18sp"/>

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/play_status"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:layout_toEndOf="@+id/roundProgressBar"
                    android:scaleType="centerInside"
                    android:src="@mipmap/music_play"/>

                <!--<com.ui.views.RoundProgressBar-->
                <!--android:id="@+id/roundProgressBar"-->
                <!--android:layout_width="25dip"-->
                <!--android:layout_height="25dip"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:visibility="gone"-->
                <!--app:max="100"-->
                <!--app:roundColor="@color/transparent"-->
                <!--app:roundProgressColor="@color/redMain"-->
                <!--app:roundWidth="2dip"-->
                <!--app:startAngle="0"-->
                <!--app:textColor="#9A32CD"-->
                <!--app:textIsDisplayable="false"-->
                <!--app:textSize="18sp"/>-->
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/tab_bg_color"/>


        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:gravity="center"
            
            android:textSize="17sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="@color/tab_bg_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/listener"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/listened"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:textColor="@color/dd_gray"
                android:textSize="14sp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:drawableLeft="@mipmap/comment_normal"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textColor="@color/dd_gray"
                android:textSize="14sp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>


            <TextView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:drawableLeft="@mipmap/dianzan__new"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/dd_gray"
                android:textSize="14sp"

                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/tab_bg_color"/>

        <ListView
            android:id="@+id/lv_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            >

        </ListView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/tab_bg_color"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="更多"/>

    </LinearLayout>

</LinearLayout>