<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color_rating_grey"
    tools:context=".MainActivity"
    android:gravity="center_horizontal">

    <EditText
    android:id="@+id/musicname"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="30dp"
    android:textSize="18dp"
    android:hint="请输入名字"
    android:paddingLeft="10dp"
    android:background="@drawable/white_box"
    />

    <LinearLayout
        android:id="@+id/ll_select"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:background="@drawable/white_box"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tea_name"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:hint="点击选择导师"
            android:gravity="center_vertical"

            />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="￥"
            android:gravity="center_vertical"
            android:textColor="@color/redMain"
            />

        <TextView
            android:id="@+id/tea_price"
            android:drawableRight="@mipmap/arrow"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="0"
            android:gravity="center_vertical"
            android:textColor="@color/redMain"
            />


    </LinearLayout>


    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:textSize="16dp"
        android:hint="请填写您的问题详情"
        android:gravity="top"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/white_box"
        />



    <Button
        android:id="@+id/submit"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/red_box"
        android:textColor="@color/white"
        android:text="免费提问"
        android:textSize="18sp"
        android:gravity="center"/>



</LinearLayout>