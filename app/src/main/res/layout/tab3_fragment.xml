<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_rating_grey"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@color/white">

        <ImageView
            android:id="@+id/add_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/add_sound" />

        <TextView
            android:layout_below="@+id/add_sound"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="录制习作"
            android:textColor="@color/dd_gray"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@color/white">

        <ImageView
            android:id="@+id/add_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/add_question" />

        <TextView
            android:layout_below="@+id/add_question"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="向老师提问"
            android:textColor="@color/dd_gray"/>

    </RelativeLayout>


</LinearLayout>