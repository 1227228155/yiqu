<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="17dp"
    android:gravity="center_horizontal"
    android:background="@color/tab_bg_color">

    <EditText
        android:id="@+id/txt02"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/edit_bg"
        android:drawablePadding="5dp"
        android:hint="请填写您的内容详情"
        android:gravity="top"
        android:maxLength="15"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text=""
        android:singleLine="true"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/ll_select"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/white_box"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tea_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="点击选择导师"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="15dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="￥"
            android:textColor="@color/redMain"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tea_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/arrow"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:text="0"
            android:textColor="@color/redMain"
            android:textSize="15dp"/>


    </LinearLayout>



    <ImageView
        android:id="@+id/submit"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/submit_unclick"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/dark_gray"
            android:text="小提示：剩余"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/dd_gray"
            android:text="免费次数 "/>
        <TextView
            android:id="@+id/times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/redMain"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/dd_gray"
            android:text=" 次"/>

    </LinearLayout>



</LinearLayout>