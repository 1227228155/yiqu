<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="15dp">


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/musicname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/musictype"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/boyin" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_bg"
        android:padding="10dp"
        android:textColor="@color/dd_gray"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/soundtime"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/stu_voice"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="172dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/stu_voice">

            <ProgressBar
                android:id="@+id/pb_stu"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/stu_voice"
                android:progressDrawable="@drawable/progressbar_stu" />

            <TextView
                android:id="@+id/stu_listen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="我也要听"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <ImageView
                android:layout_margin="5dp"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@mipmap/bofang_left"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp">

            <com.ui.views.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/head_bg" />

            <com.ui.views.CircleImageView
                android:id="@+id/stu_header"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/menu_head" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/created"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@color/transparent"
            android:gravity="center"
            android:textColor="@color/dd_gray"
            android:text=""
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:background="@color/transparent"
            android:gravity="center"
            android:text="听过"
            android:textColor="@color/dd_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/views"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:gravity="center"
            android:text=""
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/redMain"
            android:textSize="16sp" />

        <!--<View-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1" />-->

        <TextView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:text="226"
            android:visibility="gone"
            android:textColor="@color/redMain"
            android:textSize="16sp" />


    </LinearLayout>

</LinearLayout>