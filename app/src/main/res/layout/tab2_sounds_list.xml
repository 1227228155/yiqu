<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:orientation="horizontal"
    android:paddingBottom="9dp"
    android:paddingTop="9dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="13dp"
        android:background="@mipmap/music_bg" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/musicname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jin"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/accompaniment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="今夜无人夜无人夜无人"
            android:textColor="@color/dd_gray"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/add_follow"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:drawableTop="@mipmap/mine_xizuo"
        android:gravity="center"
        android:text="演唱"
        android:textColor="@color/redMain" />
</LinearLayout>

