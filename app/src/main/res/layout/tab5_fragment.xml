<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_line_color">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/menu_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/normal_color">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@mipmap/main_bg" />

            <com.ui.views.CircleImageView
                android:id="@+id/head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:src="@mipmap/menu_head" />


        </RelativeLayout>

        <LinearLayout
            android:background="@color/normal_color"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/tab5_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/red_box"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/userinfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:text="高晓丽"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/user_school"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:text="湖南师范大学附属高级中学"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/user_desc"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="写下一段话介绍自己吧"
                    android:textSize="16sp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:background="@color/normal_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/menu_item_wodeyijiayizhuye"
            style="@style/textview_mine"
            android:drawableLeft="@mipmap/mine_home"
            android:text="我的艺加艺主页" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/tab_line_color" />

        <LinearLayout

            android:id="@+id/mine_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/menu_item_wodexizuo"
                style="@style/textview_mine"
                android:drawableLeft="@mipmap/mine_xizuo"
                android:text="我的习作" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/tab_line_color" />

            <TextView
                android:id="@+id/menu_item_woping"
                style="@style/textview_mine"
                android:drawableLeft="@mipmap/mine_wowen"
                android:text="我评" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/tab_line_color" />

        </LinearLayout>


        <TextView
            android:id="@+id/menu_item_wowen"
            style="@style/textview_mine"
            android:drawableLeft="@mipmap/mine_wowen"
            android:text="我问" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/tab_line_color" />

        <TextView
            android:id="@+id/menu_item_woting"
            style="@style/textview_mine"
            android:drawableLeft="@mipmap/mine_woting"
            android:text="我听" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/tab_line_color" />

        <TextView
            android:id="@+id/menu_item_guanzhu"
            style="@style/textview_mine"
            android:drawableLeft="@mipmap/mine_guanzhu"
            android:text="关注" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/tab_line_color" />

        <TextView
            android:id="@+id/menu_item_wodeyue"
            style="@style/textview_mine"
            android:drawableLeft="@mipmap/mine_eyu"
            android:text="我的余额" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/tab_line_color" />

        <TextView
            android:id="@+id/menu_item_wodeyibi"
            style="@style/textview_mine"
            android:drawableLeft="@mipmap/mine_wodeyibi"
            android:text="我的艺币" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/tab_line_color" />

        <TextView
            android:id="@+id/menu_item_shezhi"
            style="@style/textview_mine"
            android:drawableLeft="@mipmap/mine_shez"
            android:text="设置" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/tab_line_color" />


        <TextView
            android:id="@+id/menu_item_jiesuanshuoming"
            style="@style/textview_mine"
            android:drawableLeft="@mipmap/mine_jiesuan"
            android:text="结算说明" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/tab_line_color" />

        <TextView
            android:id="@+id/menu_item_guanyu"
            style="@style/textview_mine"
            android:drawableLeft="@mipmap/mine_about"
            android:text="关于" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/tab_line_color" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <Button
                android:id="@+id/logout"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/logout_selector"
                android:gravity="center_vertical" />


        </RelativeLayout>
    </LinearLayout>


</ScrollView>


